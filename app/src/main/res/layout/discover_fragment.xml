<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a5d3e0">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="05dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/cardViewDiscover"
        android:scaleType="centerCrop"
        android:layout_width="150dp"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="8dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

       <!--     <ImageView
                android:src="@drawable/me"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/imageDiscover"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/imageDiscover"
                android:src="@drawable/navbg"
                app:border_color="#FF000000"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="W3internetchat"
                android:id="@+id/name1"
                android:textColor="#000000"
                android:layout_marginLeft="28dp"
                android:layout_below="@+id/imageDiscover"
                />

            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active 19 hours ago"
                android:textSize="11sp"
                android:id="@+id/descriptionDiscover"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/name1"
                android:gravity="center" />

            <View
                android:id="@+id/viewDiscover"
                android:layout_width="130dp"
                android:layout_height="1dip"
                android:layout_marginLeft="10dp"
                android:background="#9c9c9c"
                android:layout_below="@+id/descriptionDiscover"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anindya, Monir, Nirob"
                android:textSize="11sp"
                android:id="@+id/descriptionDiscover1"
                android:layout_marginLeft="23dp"
                android:layout_below="@+id/viewDiscover"
                android:gravity="center" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>